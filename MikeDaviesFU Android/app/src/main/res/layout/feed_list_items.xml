<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fullLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:id="@+id/content_layout1"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/headline"
            android:textColor="@color/header_bg"
            android:id="@+id/tv_pos"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/content_layout"
            android:paddingRight="@dimen/_2sdp"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/headline"
                android:textColor="@color/header_bg"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Date and Time"
                    android:textColor="@color/header_bg"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11ssp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="|"
                    android:textColor="@color/header_bg"
                    android:textStyle="bold"
                    android:textSize="@dimen/_11ssp"
                    android:id="@+id/tv_pipe"
                    />

                <TextView
                    android:id="@+id/tv_socialsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Facebook"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/header_bg"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"

                    />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


            <TextView
                android:id="@+id/tv_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
              android:textSize="@dimen/_11ssp"
                android:singleLine="false"
                android:textColor="@color/black"
                android:paddingRight="@dimen/_2sdp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="This is the story that was published by the author and has outstanding\n merit fgdh hth hbth th v h thrtrhrt hth htht" />
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/tv_readmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:text="@string/read_more"
                android:textStyle="italic"
              android:textSize="@dimen/_11ssp"

                android:textColor="@color/read_more_color"
                android:visibility="visible"
                />
            </LinearLayout>
        </LinearLayout>

       <!-- <RelativeLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_weight="0"
            android:id="@+id/imv_layout"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="right"
            android:background="@drawable/thin_theme_rounded_corner"
            >-->
        <RelativeLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_weight="0"
            android:id="@+id/imv_layout"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="right"

            >

            <ImageView
            android:id="@+id/imv_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/_2sdp"


            />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/_2sdp"
                android:src="@drawable/play_ic"
                android:visibility="gone"

                />
            <!--android:scaleType="fitXY"-->
           <!-- <com.android.volley.toolbox.NetworkImageView
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_95sdp"
                android:id="@+id/imv_story"
                android:paddingTop="@dimen/_2sdp"
                android:scaleType="fitXY"
                />
-->
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/like_comment_layout"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/iv_likeLayout"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"

                >

                <ImageButton
                    android:id="@+id/iv_like"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/likes"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"

                    />

                <TextView

                    android:id="@+id/tv_likescount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="5t4t4"
                    android:textColor="@color/header_bg"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"

                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="5636346"
                    android:textColor="@color/header_bg"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/light_gray" />
    </LinearLayout>

<!--comment section start-->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/comment_layout"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="visible"
        >


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/alpha_comment_layout"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/alpha_comment"
                android:textColor="@color/header_bg"
                android:id="@+id/tv_alpha_comment"
                android:textSize="@dimen/_12ssp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/comment_one_layout"
            >

            <TextView
                android:id="@+id/tv_comment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/greyshade"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/comment_two_layout"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            >

            <TextView
                android:id="@+id/tv_comment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/greyshade"
                android:text=""
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



    <!--comment section end-->


