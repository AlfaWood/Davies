<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:background="@color/white"
    android:id="@+id/detail"
    >
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal"

        android:id="@+id/comment_layout_ED"
        android:background="@drawable/edittext_rounded_corner"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/commentEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/comment_hint"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:background="@null"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/sendLayout"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"


            >

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_send_black"
                android:padding="@dimen/_5sdp"
                />
        </LinearLayout>

    </LinearLayout>
    </RelativeLayout>

    <include
        layout="@layout/back_toolbar"
        android:id="@+id/main_toolbar"/>



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/main_toolbar"
        android:layout_above="@+id/footer"
        android:background="@color/white"



        >


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/light_gray"

        />

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->

            <!--android:layout_marginBottom="@dimen/_5sdp"-->
            <!--android:background="@color/bt_text_blue"-->

            <!--&gt;-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comment_layout_ED"
        android:id="@+id/scrollView"
        android:background="@color/white"



        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/white"
        >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:background="@color/white"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:textColor="@color/header_bg"
    android:id="@+id/tv_title"
    android:textStyle="bold"
    android:textSize="@dimen/_12ssp"
        android:text="title"
    />
        </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal"
        android:background="@color/white"

        >

    <TextView
    android:id="@+id/tv_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:textColor="@color/header_bg"
        android:textStyle="bold"
    android:textSize="@dimen/_11ssp"
    />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"

    android:textSize="@dimen/_11ssp"
        android:text="|"
        android:id="@+id/tv_pipe"
        android:textColor="@color/header_bg"
        android:textStyle="bold"
        />

    <TextView
    android:id="@+id/tv_socialsite"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/header_bg"
        android:textStyle="bold"
    android:textSize="@dimen/_11ssp"
        />
    </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:layout_weight="1"
            android:visibility="visible"
            android:id="@+id/imv_layout"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imv_story"
                />
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/_2sdp"
                android:src="@drawable/play_ic"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
    <TextView
    android:id="@+id/tv_story"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:textSize="@dimen/_11ssp"
    android:singleLine="false"
    android:textColor="@color/black"
        android:visibility="gone"
        />
            <WebView
                android:id="@+id/wv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:ignore="WebViewLayout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                />


        </LinearLayout>

    </LinearLayout>






</LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/like_comment_layout"
            >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:id="@+id/iv_likeLayout"
           android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:gravity="center"
            >

        <ImageButton
            android:padding="@dimen/_2sdp"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_15sdp"
            android:gravity="center"
            android:background="@drawable/likes"
            android:id="@+id/iv_like"
            />

        <TextView

            android:id="@+id/tv_likescount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_bg"
            android:layout_marginLeft="@dimen/_4sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            >
        <ImageView
             android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/comment"
            android:id="@+id/iv_comment"
            />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_bg"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/light_gray" />
        </LinearLayout>

        <!--comment section-->

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/alpha_comment_layout"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/alpha_comment"
                android:textColor="@color/header_bg"
                android:id="@+id/tv_alpha_comment"
                android:textSize="@dimen/_12ssp"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:scrollbars="vertical"
            />

</LinearLayout>
    </ScrollView>



        <!--</RelativeLayout>-->
    <fr.castorflex.android.circularprogressbar.CircularProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/homeloader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:indeterminate="true"
        app:cpb_color="@color/header_bg"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        app:cpb_stroke_width="4dp"
        app:cpb_sweep_speed="1.0"
        android:visibility="gone"
    />
    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>